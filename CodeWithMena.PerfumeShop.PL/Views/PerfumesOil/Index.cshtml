@using CodeWithMena.PerfumeShop.DAL.Entities
@using System.Collections.Generic
@model ICollection<PerfumeOil>
@{
	ViewData["Title"] = "Perfumes Oil";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Perfumes Oil</h1>

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Fragrancy Type</th>
			<th scope="col">Supplier Price</th>
			<th scope="col">Fragrancy Family</th>
			<th scope="col">Rating Of Sale</th>
			<th scope="col">Sale Price</th>
			<th scope="col">Last Modified On</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var perfume in Model)
		{
			<tr>
				<td class="visually-hidden" value="@perfume.Id" />
				<td>@perfume.Name</td>
				<td>@perfume.FragranceType</td>
				<td>@perfume.PerfumePrice?.SupplierPrice</td>
				<td>@perfume.FragrancyFamily</td>
				<td>@perfume.RatingOfSale</td>
				<td>@perfume.PerfumePrice?.SalePrice</td>
				<td>@perfume.LastModifiedOn</td>
			</tr>
		}
	</tbody>
</table>