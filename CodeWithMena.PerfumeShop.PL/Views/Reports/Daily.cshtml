@{
    ViewData["Title"] = "Daily Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Daily Summary</h1>
<form method="get" asp-action="DailyResult" class="row g-2 mb-4">
    <div class="col-auto">
        <label for="date" class="col-form-label">Date</label>
    </div>
    <div class="col-auto">
        <input type="date" name="date" id="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Show</button>
    </div>
</form>
<p class="text-muted">Submit to view daily summary for the selected date.</p>
