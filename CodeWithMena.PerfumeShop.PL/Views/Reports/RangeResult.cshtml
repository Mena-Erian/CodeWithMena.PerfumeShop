@model ICollection<CodeWithMena.PerfumeShop.PL.ViewModels.Reports.DailySummaryVm>
@{
    ViewData["Title"] = "Range Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var from = ViewBag.From as DateOnly? ?? DateOnly.MinValue;
    var to = ViewBag.To as DateOnly? ?? DateOnly.MaxValue;
}

<h1>Range Summary @from - @to</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th class="text-end">Total Sales</th>
            <th class="text-end">Total Discount</th>
            <th class="text-end">Net Income</th>
            <th class="text-end">Invoices</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Date.ToString("yyyy-MM-dd")</td>
                <td class="text-end">@s.TotalSales.ToString("N2")</td>
                <td class="text-end">@s.TotalDiscount.ToString("N2")</td>
                <td class="text-end">@s.NetIncome.ToString("N2")</td>
                <td class="text-end">@s.InvoiceCount</td>
            </tr>
        }
    </tbody>
</table>
@if (!Model.Any())
{
    <p class="text-muted">No data for this range.</p>
}
<a asp-action="Range" class="btn btn-secondary mt-2">Back</a>
