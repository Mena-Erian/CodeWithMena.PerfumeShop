@using CodeWithMena.PerfumeShop.PL.Controllers
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - The King Of Perfumes</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/PerfumesOil.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CodeWithMena.PerfumeShop.PL.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-controller="POS" asp-action="Create">The King Of Perfumes</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="POS" asp-action="Create">POS</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="PerfumesOil" asp-action="Index">Perfumes Oil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Bottles" asp-action="Index">Bottles</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="POS" asp-action="Create">POS</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Settings" asp-action="AlcoholPrice">Alcohol Price</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" href="#" data-bs-toggle="dropdown">Reports</a>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" asp-controller="Reports" asp-action="Daily">Daily</a></li>
								<li><a class="dropdown-item" asp-controller="Reports" asp-action="Range">Range</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Mix" asp-action="Index">Mix Lookup</a>
						</li>
					</ul>
					@if (User.Identity?.IsAuthenticated == true)
					{
						<ul class="navbar-nav">
							<li class="nav-item">
								<span class="nav-link text-dark">@User.Identity.Name</span>
							</li>
							<li class="nav-item">
								<form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
									<button type="submit" class="btn btn-link nav-link text-dark" style="text-decoration: none;">Sign out</button>
								</form>
							</li>
						</ul>
					}
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - The king Of Perfumes - <a class="disabled text-secondary" asp-area="" target="_blank" asp-controller="PerfumesOil" asp-action="@nameof(PerfumesOilController.Download)">
				<i class="fa-solid fa-download fs-6"></i>
			</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
