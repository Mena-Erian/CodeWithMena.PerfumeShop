@model CodeWithMena.PerfumeShop.PL.ViewModels.Bottles.BottleEditDto
@{
    ViewData["Title"] = "Edit Bottle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Bottle</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SizeMl" class="form-label"></label>
                <input asp-for="SizeMl" class="form-control" type="number" min="1" />
                <span asp-validation-for="SizeMl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SalePrice" class="form-label"></label>
                <input asp-for="SalePrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
