@{
    ViewData["Title"] = "Mix Lookup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lookup Mixed Perfume</h1>
<form method="get" asp-action="Details" asp-controller="Mix" class="row g-2">
    <div class="col-auto">
        <label for="code" class="col-form-label">Mix Code (4 chars)</label>
    </div>
    <div class="col-auto">
        <input type="text" name="code" id="code" class="form-control" maxlength="4" placeholder="e.g. AB12" style="text-transform: uppercase;" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Lookup</button>
    </div>
</form>
<p class="text-muted mt-2">Enter the 4-character mix code from the sale.</p>
