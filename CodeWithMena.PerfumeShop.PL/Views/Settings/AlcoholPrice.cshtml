@model CodeWithMena.PerfumeShop.PL.ViewModels.Settings.AlcoholPriceVm
@{
    ViewData["Title"] = "Alcohol Price";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alcohol Price (Global)</h1>
<p class="text-muted">Only the latest record is active. Add a new record to change the effective price.</p>
<div class="row">
    <div class="col-md-6">
        <form asp-action="AlcoholPrice" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.Id.HasValue)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="mb-3">
                <label asp-for="PricePerMl" class="form-label"></label>
                <input asp-for="PricePerMl" class="form-control" type="number" step="0.001" />
                <span asp-validation-for="PricePerMl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EffectiveFrom" class="form-label"></label>
                <input asp-for="EffectiveFrom" class="form-control" type="datetime-local" />
                <span asp-validation-for="EffectiveFrom" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
